  ##########################################################
  ext:pubChannelF a form:Field ;
      sh:name "Publicatiekanalen" ;
      sh:order 30 ;
      sh:path lpdcExt:publicationMedium ;
      form:options  """
                     {
                       "conceptScheme":"https://productencatalogus.data.vlaanderen.be/id/conceptscheme/PublicatieKanaal",
                       "multiple": true,
                       "tooltipText": "enkel van toepassing voor Your Europe",
                       "conceptHelpText": "Valt een dienstverlening onder de SDG-verordening, vul dan publicatiekanaal 'Your Europe' en onderliggende categorie in.<ul><li>Voor andere hergebruikers moet je het publicatiekanaal niet invullen.</li></ul><p><a target='_blank' rel='noopener noreferrer' href='https://abb-vlaanderen.gitbook.io/informatie-lpdc/informatievelden-en-redactietips-voor-lpdc/tips-voor-het-invullen-van-een-productfiche#publicatiekanalen'>Meer info</a></p>",
